{
  "name": "meteor-react-bootstrap-template",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "bootstrap": "^5.1.3",
    "classnames": "^2.3.1",
    "core-js": "^3.18.0",
    "graphql": "^14.5.8",
    "meteor-node-stubs": "^1.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-bootstrap": "^2.2.0",
    "react-bootstrap-icons": "^1.7.2",
    "react-dom": "^16.14.0",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "simpl-schema": "^1.12.0",
    "sweetalert": "^2.1.2",
    "uniforms": "^3.6.0",
    "uniforms-bootstrap5": "^3.8.1",
    "uniforms-bridge-simple-schema-2": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-meteor": "^7.3.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-utils": "^2.1.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "testcafe": "^1.18.3"
  },
  "scripts": {
    "start": "npm-run-all css start-meteor",
    "start-meteor": "meteor --no-release-check --exclude-archs web.browser.legacy,web.cordova --settings ../config/settings.development.json",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o imports/startup/client/css/",
    "css-prefix": "postcss src/css/theme.css --replace --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "lint": "eslint --quiet --fix --ext .jsx --ext .js ./imports",
    "testcafe-development": "testcafe chrome tests/*.testcafe.js",
    "testcafe": "testcafe chrome:headless tests/*.testcafe.js -q --app \"meteor npm run start\""
  }
}
